{
  "manifest_version": 3,
  "name": "Procore Power-Up 2.0",
  "version": "2.0.0",
  "description": "High-performance side panel for Procore with instant access to Drawings, RFIs, and Commitments.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open Procore Power-Up",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "unlimitedStorage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.procore.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.procore.com/*"],
      "js": ["wiretap.js"],
      "world": "MAIN",
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.procore.com/*"],
      "js": ["content.js"],
      "world": "ISOLATED",
      "run_at": "document_start"
    }
  ]
}
